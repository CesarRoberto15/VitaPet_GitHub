<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_gravity="start"
            >
            <Button
                android:id="@+id/ds_ic_previous"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_flecha_izquierda"
                />
            <ImageView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:src="@drawable/title_vitapet"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/ds_lbl_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dash_header"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:text="@string/ds_lbl_title"
                android:textSize="35dp"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>