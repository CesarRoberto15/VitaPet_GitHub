<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/perro"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/perro"
        />
    <TextView
        android:id="@+id/vitapet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/perro"
        android:layout_marginTop="32dp"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        android:text="VitaPet"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/vitapet"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Log in"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:background="@drawable/button_rounded"
        />
    <Button
        android:id="@+id/newaccount"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Sign Up"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:background="@drawable/button_rounded"
        />
    <TextView
        android:id="@+id/aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newaccount"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="or enter with"
        />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/face"/>

    <ImageButton
        android:id="@+id/google"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/twitter"/>

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/google" />
</RelativeLayout>