<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/startsession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:text="Cambio para el GitHub"
        android:textSize="40dp"
        android:textAllCaps="false"
        />
    <EditText
        android:id="@+id/user"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/startsession"
        android:hint="Enter email"
        android:background="@drawable/edit_round"
        android:paddingLeft="100dp"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/user"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edit_round"
        android:paddingLeft="100dp"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:background="@drawable/button_rounded"
        />
    <TextView
        android:id="@+id/aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="Puede elegir cualquiera de estas opciones"
        />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/face"/>

    <ImageButton
        android:id="@+id/google"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/google"/>

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/twitter" />
</RelativeLayout>