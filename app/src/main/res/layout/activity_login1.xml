<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/startsession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Start Session"
        android:textSize="40dp"
        android:textAllCaps="false"
        />
    <EditText
        android:id="@+id/user"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/startsession"
        android:hint="E-mail or Cell Phone"
        android:background="@drawable/edit_round"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/user"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edit_round"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        />
    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:background="@drawable/button_rounded"
        />
    <Button
        android:id="@+id/pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#0033FF"
        android:text="Did you forget your password?"
        android:background="#ffffff"
        android:textAllCaps="false"

        />

    <TextView
        android:id="@+id/aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pregunta"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="or enter with"
        />

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/face"/>

    <ImageButton
        android:id="@+id/google"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/twitter"/>

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/aviso"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_social"
        android:scaleType="fitCenter"
        android:src="@drawable/google" />
</RelativeLayout>