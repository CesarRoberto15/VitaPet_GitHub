<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/img_dog"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:src="@drawable/dog_header"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/lbl_title"
            android:layout_width="200dp"
            android:layout_height="72dp"
            android:layout_margin="5dp"
            android:src="@drawable/title_vitapet"
            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="@string/sign"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/colorVerdeTenis"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btn_sing_up"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="@string/sign_up"
            android:background="@drawable/btn_rounded"
            android:backgroundTint="@color/colorVerdePacai"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_margin="5dp"
            />
        <View
            android:id="@+id/line"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/colorPlomo"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/lbl_other_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_with"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/colorPlomo"
            android:layout_margin="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_facebook"
                android:textSize="30dp"
                android:layout_margin="5dp"

                />
            <Button
                android:id="@+id/btn_twitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_twitter"
                android:textSize="30dp"
                android:layout_margin="5dp"
                />
            <Button
                android:id="@+id/btn_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_google"
                android:textSize="30dp"
                android:layout_margin="5dp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>